{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es6","es2018","dom"],
    "outDir": ".",
    "rootDir": "src",
    "sourceMap": false,
    "removeComments": false,
    "strict": true,
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.js", "node_modules"]
}
